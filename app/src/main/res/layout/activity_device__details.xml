<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elashry.eleman.Activities.ShowMaintenance_Details">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:fillViewport="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        >

        <LinearLayout
            android:id="@+id/maintenance_data_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="visible"
            >
            <ImageView
                android:id="@+id/device_details_devImage"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:adjustViewBounds="true"
                />
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/background_color"

                >

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="@android:color/transparent"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/device_details_devCateg"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="#160e60"
                            android:textSize="@dimen/main_text_size"
                            android:textStyle="italic"
                            android:inputType="textMultiLine"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:background="#d2ace6"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="القسم"
                            android:textColor="#160e60"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            />

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#160e60" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/device_details_devName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="#160e60"
                            android:textSize="@dimen/main_text_size"
                            android:textStyle="italic"
                            android:inputType="textMultiLine"

                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:background="#d2ace6"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="اسم الجهاز"
                            android:textColor="#160e60"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#160e60" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/device_details_devPrice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="#160e60"
                            android:textSize="@dimen/main_text_size"
                            android:textStyle="italic"
                            android:inputType="textMultiLine"

                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:background="#d2ace6"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="السعر"
                            android:textColor="#160e60"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#160e60" />


                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
